{
  "openapi": "3.0.1",
  "info": {
    "title": "node-typescript-express-starter",
    "description": "",
    "contact": {
      "name": "GitHub",
      "url": "https://github.com/MrTimeey/node-typescript-express-starter"
    },
    "license": {
      "name": "Licensed Under MIT",
      "url": "https://github.com/MrTimeey/node-typescript-express-starter/blob/main/LICENSE"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/"
    }
  ],
  "tags": [
    {
      "name": "API"
    },
    {
      "name": "Docs"
    }
  ],
  "paths": {
    "/swagger": {
      "get": {
        "tags": ["Docs"],
        "summary": "Returns the Swagger UI",
        "description": "Serves static Swagger UI",
        "responses": {
          "200": {
            "description": "The Swagger UI",
            "content": {
              "text/html": {}
            }
          }
        }
      }
    },
    "/api/hello": {
      "get": {
        "tags": ["API"],
        "summary": "Returns greeting message",
        "description": "Simple hello message",
        "responses": {
          "200": {
            "description": "A simple message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "description": "Simple message",
                      "example": "Hello World"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/ping": {
      "get": {
        "tags": ["API"],
        "summary": "Returns simple pong message",
        "description": "Simple pong message",
        "responses": {
          "200": {
            "description": "A simple pong message",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "pong": {
                      "type": "string",
                      "description": "Timestamp",
                      "example": "16.09.2024 - 09:25"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/doc": {
      "get": {
        "tags": ["Docs"],
        "summary": "Returns the list of all provided api-doc resources",
        "responses": {
          "200": {
            "description": "A list of all provided api-doc resources",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "providedFiles": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "example": "http://localhost:3000/api/doc/openapi.json"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/doc/openapi.json": {
      "get": {
        "tags": ["Docs"],
        "summary": "Returns the openapi.json",
        "responses": {
          "200": {
            "description": "The openapi.json which is the base for this document",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    }
  }
}
